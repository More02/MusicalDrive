<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        style="?attr/materialCardViewFilledStyle"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:id="@+id/musicview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageButton
                android:id="@+id/playbt"
                android:layout_width="28dp"
                android:layout_height="31dp"
                android:src="@drawable/play_new"
                android:layout_marginTop="5dp"
                app:elevation="0dp"
                android:scaleType="center"/>

            <ImageButton
                android:id="@+id/pausebt"
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:src="@drawable/pause_new"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                app:elevation="0dp"
                android:scaleType="center"/>

            <ImageButton
                android:id="@+id/stopbt"
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:src="@drawable/stop_new"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                app:elevation="0dp"
                android:scaleType="center"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_recycler_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textColor="#4E54B4"
                android:layout_marginLeft="3dp"/>

            <!--<ImageButton-->
                <!--android:id="@+id/likebt"-->
                <!--android:layout_width="27dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:background="@color/white"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginLeft="-22dp"-->
                <!--android:src="@drawable/like"/>-->








        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/numberlikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="4dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="right"/>
        <CheckBox
            android:id="@+id/likebt"
            android:layout_width="27dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_marginLeft="-31dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/checkbox_selector" />


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>